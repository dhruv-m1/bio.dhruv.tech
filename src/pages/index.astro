---
import GradientContainer from "../components/GradientContainer.astro";
import Header from "../components/Header.astro";

import MainLayout from "../layouts/MainLayout.astro";
import SolidContainer from "../components/SolidContainer.astro";
import Spotlight from "../components/Spotlight.astro";
import Lottie from "../components/Lottie.svelte";

import "../styles/base.css";
import SectionHeadingLeft from "../components/SectionHeadingLeft.astro";
import StandardSectionWrapper from "../components/StandardSectionWrapper.astro";
import Skill from "../components/Skill.astro";
import ReverseGradientContainer from "../components/ReverseGradientContainer.astro";
import SkillGroup from "../components/SkillGroup.astro";
import Service from "../components/Service.astro";
import Project from "../components/Project.astro";
---

<MainLayout title="Dhruv Malik | Software Engineer | Ethical Hacker">

	<GradientContainer>
		<section class="flex flex-col h-screen">

			<Header></Header>

			<div class="grow flex flex-row">

				<div class="w-full lg:w-1/2 flex flex-col justify-center font-poppins font-bold text-center lg:text-left">

					<div class="lg:pl-6 mt-[-10vh] lg:mt-[-15%] z-10">

						<h2 class="text-3xl md:text-4xl pb-3">Building & Securing</h2>
						<h1 class="text-4xl md:text-5xl pb-12">Web Applications</h1>
						<h3 class="font-medium text-xl md:text-2xl">Fullstack Developer, Security Enthusiast</h3>

					</div>
					
					<div class="absolute w-full lg:hidden z-0">
						<div class="flex flex-row justify-center">
							<Spotlight top="-15vh" left="-100px" width="43.5rem" height="27.1rem" rotation="37deg" variant="blue"></Spotlight>
						</div>
					</div>
					
				</div>

				<div class="w-1/2 hidden lg:flex justify-center items-center">

					<div class="absolute mt-[-10%] z-10 w-[500px] h-[500px]">
						
						<Lottie src="/assets/animations/developer" client:idle></Lottie>
						
					</div>

					<Spotlight top="-150px" width="43.5rem" height="27.1rem" rotation="37deg" variant="blue"></Spotlight>
				</div>

			</div>

		</section>
	</GradientContainer>

	<SolidContainer>

		<StandardSectionWrapper>

			<SectionHeadingLeft colorClass="bg-light-blue">About</SectionHeadingLeft>

			<div class="flex flex-col lg:flex-row justify-center align-middle py-12">

				<div class="flex flex-row justify-center">
					<img class="h-40 w-40" src="/assets/images/profile_pic.webp" alt="Profile picture">
				</div>

				<div class="flex flex-col justify-center font-poppins font-semibold text-lg md:text-xl text-center lg:text-left lg:w-[45%] pt-5 lg:pt-0 lg:pl-10">
					<p>Software developer focused on web application development and security, 
					with an interest in the internet of things.</p>

					<div class="pt-6 text-base font-bold flex flex-row text-center align-center justify-center lg:justify-start">

						<a href="/files/resume_public.pdf" class="rounded-3xl px-5 pt-3 mr-5 bg-light-blue hover:opacity-80" aria-label="View Resume">View Resume <i class="fa-solid fa-arrow-right"></i> </a>
						<a href="https://linkedin.com/in/dhruvmalik" class="mr-5 py-1 text-3xl hover:opacity-80" aria-label="View Linkedin Profile"> <i class="fa-brands fa-linkedin"></i> </a>
						<a href="https://github.com/dhruv-tech/" class="mr-5 py-1 text-3xl hover:opacity-80" aria-label="View Github Profile"> <i class="fa-brands fa-github"></i> </a>

					</div>
		
				</div>

			</div>

		</StandardSectionWrapper>
	</SolidContainer>

	<ReverseGradientContainer>

		<StandardSectionWrapper>

			<SectionHeadingLeft colorClass="bg-medium-purple">
				Services & Skills	
			</SectionHeadingLeft>

			<div class="relative lg:hidden">
				<div class="absolute">
					<Spotlight top="-150px" left="60vw" width="579px" height="339px" rotation="8deg" variant="purple"></Spotlight>
				</div>
			</div>

			<div class="relative hidden lg:block">
				<div class="absolute">
					<Spotlight top="-200px" left="75vw" width="579px" height="339px" rotation="8deg" variant="purple"></Spotlight>
				</div>
			</div>

			<div class="flex flex-col lg:flex-row z-10 align-center lg:justify-center">

				<Service thumbnail="/assets/animations/mobile_development">
					Frontend & Hybrid Mobile Development
				</Service>
				
				<Service thumbnail="/assets/animations/backend">
					Backend Development
				</Service>

				<Service thumbnail="/assets/animations/penetration_testing">
					Penetration Testing<br/>for Web Apps
				</Service>

			</div>

			<div class="relative lg:hidden">
				<div class="absolute">
					<Spotlight top="-70px" left="-25vw" width="750px" height="339px" rotation="8deg" variant="purple"></Spotlight>
				</div>
			</div>

			<div class="relative hidden lg:block">
				<div class="absolute">
					<Spotlight top="-60px" left="-9vw" width="1100px" height="339px" rotation="8deg" variant="purple"></Spotlight>
				</div>
			</div>

			<div class="flex flex-col z-10 px-2 lg:px-10 pb-10">

				<div class="bg-dark-blue px-6 lg:px-12 pt-6 font-poppins rounded-2xl border-[2px] border-slate-900">

					<SkillGroup name="Languages & Frameworks I use">

						<Skill>JavaScript</Skill>
						<Skill>Node.js</Skill>
						<Skill>TypeScript</Skill>
						<Skill>Python</Skill>
						<Skill>Java</Skill>
						<Skill>HTML</Skill>
						<Skill>CSS</Skill>
						<Skill>Express</Skill>
						<Skill>Fastify</Skill>
						<Skill>Svelte</Skill>
						<Skill>React</Skill>
						<Skill>Vue.js</Skill>
						<Skill>Astro</Skill>
						<Skill>Auth0</Skill>
						<Skill>NativeScript</Skill>
						<Skill>Tailwind</Skill>
						<Skill>Lottie</Skill>
						<Skill>JQuery</Skill>

					</SkillGroup>
	
					<SkillGroup name="I manage my data with">

						<Skill>MongoDB</Skill>
						<Skill>JSON</Skill>
						<Skill>Redux</Skill>
						<Skill>Pinia</Skill>
						<Skill>Svelte Store</Skill>

					</SkillGroup>

				</div>

			</div>

		</StandardSectionWrapper>

	</ReverseGradientContainer>

	<SolidContainer>

		<StandardSectionWrapper>

			<SectionHeadingLeft colorClass="bg-medium-turquoise">
				Side Projects
			</SectionHeadingLeft>

			<div class="m-6 flex flex-row justify-center text-center lg:text-left">

				<Project title="Aqueduct" thumbnail="/assets/animations/aqueduct" github="https://github.com/dhruv-tech/Aqueduct">
					A SMS-based chatbot designed to empower feature phone users with access to the internet. 
					Built with NodeJS & Twilio SDK.
				</Project>

			</div>

			<div class="m-6 flex flex-row-reverse justify-center text-center lg:text-right">
				
				<Project title="NinjaChefs" thumbnail="/assets/animations/ninjachefs" github="https://github.com/dhruv-tech/ninjachefs-v3">
					A website designed for home cooks to share their household recipes with the world. 
					Built with React, Redux, NodeJS & MongoDB.
				</Project>

			</div>

			<div class="m-6 flex flex-row justify-center text-center lg:text-left">
				
				<Project title="Alpha Calorie Tracker" thumbnail="/assets/animations/calorie_tracker" github="https://github.com/dhruv-tech/calorie-tracker">
					A web app developed for UBC students to easily discover food options on campus and track their daily caloric intake. 
						Built with React, Redux, NodeJS & MongoDB.
				</Project>

			</div>
			

		</StandardSectionWrapper>

	</SolidContainer>


	<ReverseGradientContainer>

		<div class="flex flex-row font-poppins font-bold">

			<div class="bg-light-blue h-[400px] flex flex-col align-middle text-center justify-center w-[35%] md:w-[32%] ml-[-32px] rounded-br-[160px] lg:rounded-br-[175px] min-[1650px]:mt-10 min-[1650px]:ml-0 min-[1650px]:rounded-[25px] min-[1650px]:w-[25%]">
				<h2 class="text-3xl md:text-4xl">Get in touch</h2>
			</div>

			<div class="flex flex-col flex-grow justify-center align-middle text-center">
				<h2 class="text-xl md:text-2xl"><a href="mailto:email@dhruv.tech" aria-label="Send an email">email@dhruv.tech</a></h2>
				<div class="mt-8">
					<a aria-label="Connect on Linkedin" href="https://bit.ly/3Djul68" class="rounded-3xl py-3 px-5 mt-3 bg-white text-slate-900 w-60 hover:opacity-90">
						Connect on LinkedIn
						<i class="fa-brands fa-linkedin"></i>
					</a>
				</div>
			</div>

		</div>

		<div class="flex flex-col justify-center align-middle text-center w-full text-xs font-poppins py-10">
			<span class="font-bold">Â© Dhruv Malik 2023-24. All Rights Reserved.</span>
			<span>Built with Astro, Tailwind & Lottie. 
			(<a href="https://github.com/dhruv-tech/dhruv.tech" target="_blank" rel="noopener noreferrer" class="underline">View on Github</a>)</span> 
			<span>Version 3.0.1, Last updated 21/01/2023.</span>
			<span>Thank you for visiting!</span>
		</div>

	</ReverseGradientContainer>
</MainLayout>

