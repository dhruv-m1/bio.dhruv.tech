---
import LazyLottie from "./LazyLottie.svelte";
import Spotlight from "./Spotlight.astro";

const {title, thumbnail, github, demo} = Astro.props;
---

<article class="font-poppins font-bold w-full lg:w-[50%] flex flex-col justify-center">

    <h3 class="text-xl md:text-2xl">{title}</h3>

    <p class="text-lg lg:text-xl my-3 font-semibold"><slot></slot></p>
    <div class="text-base font-bold mt-3 lg:mt-6">

        {demo && <a href={demo} class="rounded-3xl py-3 px-5 mr-3 bg-white text-slate-900 hover:opacity-95">Live Demo <i class="fa-solid fa-arrow-right"></i></a>}
        <a href={github} class="text-3xl relative top-1 hover:opacity-80" aria-label="View Github repository"><i class="fa-brands fa-github"></i></a>

    </div>
</article>

<div class="w-[2.5%] h-9"></div>

<div class="hidden lg:flex flex-row justify-center align-middle w-[17%] m-3" role="presentation">
    <div class="relative z-0">
        <Spotlight width="300px" height="300px" rotation="0deg" variant="turquoise"></Spotlight>
    </div>
    <figure class="lg:h-[275px] lg:w-[275px] absolute z-10" role="presentation" aria-hidden="true">
        <LazyLottie src={thumbnail} loop={true} client:visible></LazyLottie>
    </figure>
</div>